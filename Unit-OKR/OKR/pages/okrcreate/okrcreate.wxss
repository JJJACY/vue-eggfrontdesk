/* pages/okrcreate/okrcreate.wxss */
.page-container{
  display: flex;
  flex-direction: column;
  position: relative;
}
.okrcreate-item{
  height: 80px;
}
.okrcreate-item-title{
  font-size: 12px;
  color: #333;
}
.okrcreate-item-input{
  display: flex;
  justify-content: space-between;
  position: relative;
  padding-right: 60px;
}
.okrcreate-input{
  display: block;
  width: 100%;
  height: 40px;
  padding: 0 8px;
  line-height: 40px;
  font-size: 14px;
  color:#666;
  border: 2px solid #333;
}
.add-reduce{
  position: absolute;
  top: 0;
  right:0px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 44px;
  height: 44px;
  line-height: 44px;
  background: #999;
  color: #fff;
}
.page-footer{
  width: 100%;
  position: absolute;
  bottom: 25px;
  left: 0;
}
.submit-btn{
  width: 100%;
  height: 80rpx;
  text-align: center;
  background-color: #666;
  color: #fff;
  font-size: 18px;
  border-radius: 0;
}
.submit-btn_hover{
  opacity: .8;
}