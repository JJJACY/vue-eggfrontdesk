.page-container{
  position: relative;
  width: 335px;
  height: 563px;
  padding: 20px;
}
#editor{
  width: 100%;
  height: 80px;
  font-size: 13px;
}
.blog-add{
  display: inline-block;
  width: 100px;
  height: 100px;
  line-height: 100px;
  text-align: center;
  color: #999;
  font-size: 48px;
  font-weight: 100;
  background: #F6F6f6;
}
.blog-push{
  position: absolute;
  top: 240px;
  right: 20px;
  width: 100px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  color: #fff;
  background: #000;
}
.blog-push_hover{
  opacity: 0.8;
}
