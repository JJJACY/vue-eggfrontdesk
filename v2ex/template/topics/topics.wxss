.topics-item{
    position: relative;
    display: flex;
    padding: 30rpx;
    background: #fff;
    line-height: 40rpx;
    border-bottom: 2rpx solid #e4e4e4;
  }
  .topics-item .topics-avatar{
    flex: none;
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
    margin-right: 16rpx;
    background-color: #f5f5f5;
  }
  .topics-item .topics-username{
    font-size: 26rpx;
    color: #999;
  }
  .topics-item .topics-title{
    font-size: 28rpx;
    color: #333;
  }